<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center"
    android:id="@+id/jqxq_address_ll"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/jqxq_address"
        android:textSize="16sp"
        android:layout_weight="1"
        android:textColor="@color/txt_black"
        android:layout_gravity="left|center"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:layout_marginLeft="12dp"
        android:ellipsize="end"
        android:text="北京市东城区永定门内大街东侧"
        android:layout_height="wrap_content" />


    <View
        android:layout_width="1px"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="@color/gray"
        android:layout_height="match_parent">

    </View>

    <LinearLayout
        android:id="@+id/jqxq_btn_dh_ll"
        android:layout_width="74dp"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/jqxq_dt_selector"
        android:layout_height="38dp">

        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/lyxq_dw_icon"
            android:layout_height="16dp" />


        <TextView
            android:background="@null"
            android:layout_toRightOf="@+id/iv_item_a"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center"
            android:textColor="@color/tabSelectedTextColor"
            android:layout_height="wrap_content"
            android:text="地图" />

    </LinearLayout>



</LinearLayout>
