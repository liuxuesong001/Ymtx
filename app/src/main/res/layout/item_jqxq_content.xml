<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bj"
    android:id="@+id/mpgm_rl"
    android:fitsSystemWindows="true"
    >


    <TextView
        android:id="@+id/thtj_title"
        android:textColor="@color/txt_black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:text="【电子导游】北京市南锣鼓巷门票"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/thtj_item_btna"
        android:layout_below="@id/thtj_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:text="福建一卡通8折"
        android:textSize="10sp"
        android:background="@drawable/shape_btn_zc_a"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/thtj_item_btnb"
        android:layout_below="@id/thtj_title"
        android:layout_width="wrap_content"
        android:text="平台折扣9折"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/thtj_item_btna"
        android:background="@drawable/shape_btn_zc_a"
        android:layout_height="20dp" />


    <TextView
        android:id="@+id/thtj_jt"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16.00 之前可以预定今日票"
        android:textColor="@color/md_blue_700"
        android:layout_below="@id/thtj_item_btna"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/thtj_item_xj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textColor="@color/md_orange_700"
        android:text="¥20起" />

    <TextView
        android:id="@+id/thtj_item_yj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thtj_item_btnb"
        android:layout_alignBottom="@+id/thtj_item_btnb"
        android:layout_alignParentRight="true"
        android:text="¥26"
        android:gravity="center"
        android:textSize="10sp" />

    <Button
        android:id="@+id/thtj_btn_yd"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:text="预定"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/thtj_jt"
        android:layout_alignBottom="@id/thtj_jt"
        android:background="@drawable/shape_btn_thtj_z" />



</RelativeLayout>



