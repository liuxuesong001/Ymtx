                            android:background="@color/gray"
                            android:layout_height="1px">

                        </View>

                        <include layout="@layout/include_address_jqxq"> </include>

                        <View
                            android:layout_width="match_parent"
                            android:background="@color/gray"
                            android:layout_height="1px"/>


                    </LinearLayout>

                    <include layout="@layout/include_jqxq_content"> </include>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/gray"
                        android:layout_height="1px"/>

                    <include layout="@layout/include_jqxq_content_more"> </include>

                    <View
