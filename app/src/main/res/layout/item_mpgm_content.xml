<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_14"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="@dimen/dp_14">
    <!--android:background="@drawable/selector_bj"-->

    <RelativeLayout
        android:id="@+id/mpgm_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/mpgm_iv"
            android:layout_width="92dp"
            android:layout_height="146dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mpgm_iv"
            android:gravity="left">

            <TextView
                android:id="@+id/mpgm_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mpgm_item_pj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mpgm_item_name"
                android:textColor="@color/tabSelectedTextColor"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:id="@+id/mpgm_item_pjnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mpgm_item_name"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/mpgm_item_pj"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_14" />


            <!--<com.lypt.project.widget.gridview.MyGridView-->

            <!--android:id="@+id/mpgm_gtidview_zk"-->
            <!--android:layout_width="match_parent"-->
            <!--android:numColumns="3"-->
            <!--android:gravity="center"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_below="@+id/mpgm_item_pj"-->
            <!--android:layout_height="wrap_content">-->

            <!--</com.lypt.project.widget.gridview.MyGridView>-->

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/mpgm_gtidview_zk"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/mpgm_item_pj">-->

            <!--</android.support.v7.widget.RecyclerView>-->

            <LinearLayout
                android:id="@+id/mpgm_gtidview_zk"
                android:layout_width="176dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="left|center"
                android:layout_below="@+id/mpgm_item_pj"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mpgm_tv_zka"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mpgm_tv_zkb"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mpgm_tv_zkc"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <TextView
                android:id="@+id/mpgm_item_jl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mpgm_gtidview_zk"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_12" />


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right|bottom"
        android:layout_marginLeft="@dimen/dp_4"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_yj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mpgm_¥_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/color_aaaaaa"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mpgm_item_yj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="200"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/tabSelectedTextColor"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/mpgm_item_zj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="150"
                android:textColor="@color/tabSelectedTextColor"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起"
                android:visibility="gone"
                android:layout_marginLeft="1dp"
                android:textColor="@color/tabSelectedTextColor"
                android:textSize="@dimen/sp_12" />



        </LinearLayout>


        <Button
            android:id="@+id/mpgm_btn_ckxq"
            android:layout_width="62.5dp"
            android:layout_height="21.5dp"
            android:background="@drawable/dh_lx_selector"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>


</LinearLayout>
